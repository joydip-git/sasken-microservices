services:
  basektdb:
    container_name: basketdb
    image: redis
    ports:
    - published: 6379
      target: 6379
    restart: always
  basket.api:
    build:
      context: E:\sasken-microservices\MicroservicesApp
      dockerfile: src/Basket/Basket.API/Dockerfile
    container_name: basketapi
    depends_on:
    - basektdb
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ConnectionStrings:Redis: basketdb:6379
    image: basketapi
    ports:
    - published: 9501
      target: 80
    volumes:
    - /.aspnet/https:/root/.aspnet/https:rw
    - /.microsoft/usersecrets:/root/.microsoft/usersecrets:rw
  catalog.api:
    build:
      context: E:\sasken-microservices\MicroservicesApp
      dockerfile: src/Catalog/Catalog.API/Dockerfile
    container_name: catalogapi
    depends_on:
    - catalogdb
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      CatalogDatabaseSettings:ConnectionString: mongodb://catalogdb:27017
    image: catalogapi
    ports:
    - published: 9500
      target: 80
    volumes:
    - /.aspnet/https:/root/.aspnet/https:rw
    - /.microsoft/usersecrets:/root/.microsoft/usersecrets:rw
  catalogdb:
    container_name: catalogdb
    image: mongo
    ports:
    - published: 27017
      target: 27017
    restart: always
    volumes:
    - /site:/data/db:rw
version: '3.4'